<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/interval_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_22"
        android:layout_marginRight="@dimen/margin_22"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/interval_10"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold"
            tools:text="招聘标题" />


        <TextView
            android:id="@+id/expect_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_light_main"
            android:textSize="@dimen/text_size_16"
            tools:text="20-40k" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_22"
        android:layout_marginTop="@dimen/interval_15"
        android:layout_marginRight="@dimen/margin_22"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/personal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/interval_15"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_16"
            tools:text="张磊" />

        <TextView
            android:id="@+id/work_years"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_16"
            tools:text="3-5年" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_22"
        android:layout_marginTop="@dimen/interval_15"
        android:layout_marginRight="@dimen/margin_22"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/interval_15"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_16"
            tools:text="2019-12-20" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_16"
            tools:text="联系电话：13606394061" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/interval_6"
        android:layout_marginTop="@dimen/interval_10"
        android:background="@color/gray_color" />


</LinearLayout>