<?xml version="1.0" encoding="utf-8"?>
<com.mine.master.widget.BottomViewWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/interval_6"
    android:paddingBottom="@dimen/interval_6">


    <LinearLayout
        android:id="@+id/bottom_home_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_home_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_bottom_home_select" />

        <TextView
            android:id="@+id/bottom_home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/interval_6"
            android:text="首页"
            android:textColor="@color/bg_light_main"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_upload_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_upload_bottom" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_mine_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_mine_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_bottom_mine_unselect" />

        <TextView
            android:id="@+id/bottom_mine_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/interval_6"
            android:text="我的"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>
</com.mine.master.widget.BottomViewWidget>